<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChooseModeActivity">

    <Button
            android:text="@string/local_pvp_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pvp_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="260dp"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp" app:backgroundTint="#3F51B5"
            android:onClick="goToLocalPvPActivity"/>
    <Button
            android:layout_width="161dp"
            android:layout_height="51dp" android:id="@+id/settings_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="408dp"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp" app:backgroundTint="#3F51B5"
            android:onClick="goToSettingsActivity" android:text="@string/settings_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>