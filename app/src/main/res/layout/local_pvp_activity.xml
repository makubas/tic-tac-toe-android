<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LocalPvpActivity" android:id="@+id/main">
    <com.tictactoe.FieldView
            android:layout_width="44dp"
            android:layout_height="39dp" android:id="@+id/field_current_move"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="79dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3" app:layout_constraintVertical_bias="1.0"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_3_3"
            app:layout_constraintStart_toEndOf="@+id/field_2_3" app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.8" app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.51" app:layout_constraintTop_toBottomOf="@+id/field_3_2"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_2_2"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" app:layout_constraintStart_toStartOf="@+id/imageView3"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_2_1"
            app:layout_constraintBottom_toTopOf="@+id/field_2_2" app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" app:layout_constraintStart_toStartOf="@+id/imageView3"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_3_1"
            app:layout_constraintStart_toEndOf="@+id/field_2_1"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintBottom_toTopOf="@+id/field_3_2" app:layout_constraintTop_toTopOf="@+id/imageView3"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_1_3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.505"
            app:layout_constraintTop_toBottomOf="@+id/field_1_2" app:layout_constraintEnd_toStartOf="@+id/field_2_3"
            app:layout_constraintHorizontal_bias="0.285"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_2_3"
            app:layout_constraintTop_toBottomOf="@+id/field_2_2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.505" app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_1_1"
            app:layout_constraintEnd_toStartOf="@+id/field_2_1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintBottom_toTopOf="@+id/field_1_2" app:layout_constraintTop_toTopOf="@+id/imageView3"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/field_3_2"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" app:layout_constraintStart_toEndOf="@+id/field_2_2"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintVertical_bias="0.497"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"/>
    <com.tictactoe.FieldView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/field_1_2"
            app:layout_constraintEnd_toStartOf="@+id/field_2_2" app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.285" app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/borders" android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/crossWins"
            android:layout_marginBottom="124dp"/>
    <ImageView
            android:layout_width="49dp"
            android:layout_height="44dp" app:srcCompat="@drawable/circle" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@+id/circleWins"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/cross" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/curremt_move"
            android:layout_width="189dp"
            android:layout_height="0dp" android:id="@+id/textView"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.297"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>
    <TextView
            android:text="@string/vs_wins_text"
            android:layout_width="60dp"
            android:layout_height="35dp" android:id="@+id/textView2"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#AE0000" android:textSize="24sp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="38dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.2"/>
    <TextView
            android:layout_width="64dp"
            android:layout_height="45dp" android:id="@+id/circleWins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:text="0" android:textSize="40sp"/>
    <TextView
            android:layout_width="42dp"
            android:layout_height="46dp" android:id="@+id/crossWins"
            app:layout_constraintStart_toEndOf="@+id/circleWins"
            app:layout_constraintTop_toTopOf="parent"
            android:text="0" android:textSize="40sp"
            android:gravity="right" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>